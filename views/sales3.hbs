<style>
    .my-del-icon {
        color: red;
        cursor: pointer;
    }
</style>

<div>
    <a href="/sales3/add" class="btn btn-primary">Add New info</a>
</div>


<table class="table table-hover table-dark">
  <thead>
    <tr  >
      <th scope="col"><i class="fas fa-trash-alt"></i></th>
      <th scope="col">ajax delete</th>
      <th scope="col">#</th>
      <th scope="col">sales_id</th>
      <th scope="col">name</th>
      <th scope="col">birthday</th>
      <th scope="col"><i class="fas fa-edit"></i></th>
    </tr>
  </thead>
  <tbody>
      {{#each sales}}
    <tr>
      <td ><a href="javascript: remove_item({{sid}})"><i class="fas fa-trash-alt"></i></a></td>
      <td><i class="fas fa-trash-alt   my-del-icon" data-sid="{{sid}}" ></i></td>
      <td >{{sid}}</td>
      <td>{{sales_id}}</td>
      <td>{{name}}</td>
      <td>{{birth}}</td>
      <td><a href="/sales3/edit/{{sid}}"><i class="fas fa-edit"></i></a></td>
    </tr>
    {{/each}}
  </tbody>
</table>

<script>
    function remove_item(sid){
        if(confirm("確定要移除編號為 " + sid + " 的資料嗎?")){
            location.href = '/sales3/remove/' + sid;
        }
    }
     //ajax;
    $('.my-del-icon').click(function(){ //點了上面後，就來這邊做click function
        var me = $(this);
        var sid02 = me.attr('data-sid');
        if(confirm("確定要移除編號為 " + sid02 + " 的資料嗎?")){
            $.get('/sales3/remove2/' + sid02, function(data){
                console.log(data);
                me.closest('tr').remove();
            }, 'json');
        }
    });

</script>