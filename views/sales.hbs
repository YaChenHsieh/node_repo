<table class="table table-hover table-dark">
  <thead>
    <tr  >
      <th scope="col">name</th>
      <th scope="col">age</th>
      <th scope="col">id</th>
    </tr>
  </thead>
  <tbody>
      {{#each sales}}
    <tr >
      <td > {{this.name}}</td>
      <td>{{this.age}} </td>
      <td class="{{../myclass}}" >{{@index}} - {{this.id}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>