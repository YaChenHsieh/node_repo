<form  method="post">
 
  <div class="form-group">
    <label for="email">Email address:</label>
    <input type="email" class="form-control" id="email" name="email" placeholder="Enter email addr">

    {{#if email}}
    <small id="emailHelp" class="form-text text-muted">上次輸入為:{{email}}</small>
    {{/if}}

  </div>

  <div class="form-group">
    <label for="password">Password:</label>
    <input type="password" class="form-control" id="password" name="password"placeholder="Password">

    {{#if password}}
    <small id="pwdHelp" class="form-text text-muted">上次輸入為:{{password}}</small>
    {{/if}}

  </div>

 
  <button type="submit" class="btn btn-primary">Submit</button>
</form>